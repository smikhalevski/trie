{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "outDir": "./gen"
  },
  "include": [
    "./src/**/*"
  ]
}
